@model ConfirmMailViewModel

@{
    Layout = null;
}


<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <form method="post">
        <h2></h2>
        <label>Mail Adresiniz</label>
        <input type="text" class="form-control" asp-for="Email" value="@ViewBag.mail" />
        <br />
        <label>Mail Adresinize Gelen 6 Haneli Kodu Giriniz</label>
        <input type="text" class="form-control" asp-for="ConfirmCode" />
        <br />
        <button class="btn btn-primary">Hesabı Aktifleştir</button>
    </form>
</div>
